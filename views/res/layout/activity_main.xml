<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:minWidth="190dip"
         >

        <Button
            android:id="@+id/activity_menu_button_start"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/activity_menu_button_start" />

        <Button
            android:id="@+id/activity_menu_button_stop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/activity_menu_button_stop" />
        
         <Button
             android:id="@+id/activity_menu_button_track"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:text="@string/activity_menu_button_track" />

    </LinearLayout>
   
</RelativeLayout>

 